<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/deal_use_background">

    <Button
        android:layout_width="91dp"
        android:layout_height="78dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="230dp"
        android:background="@mipmap/get_bike" />

    <Button
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="320dp"
        android:background="@mipmap/get_bike_over" />

    <Button
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_marginStart="185dp"
        android:layout_marginTop="390dp"
        android:background="@mipmap/put_bike_over" />

    <Button
        android:layout_width="91dp"
        android:layout_height="78dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="450dp"
        android:background="@mipmap/put_bike" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:background="@mipmap/bt_help"/>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:fab_addButtonColorNormal="#FFBA50"
        app:fab_addButtonColorPressed="@color/colorAccent"
        android:layout_margin="16dp"
        fab:fab_labelsPosition="left">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="copyRight"
            app:fab_icon="@mipmap/copyright"
            fab:fab_colorPressed="@color/colorAccent"
            app:fab_colorNormal="#FFBA50"
            fab:fab_size="mini" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="aboutMe"
            app:fab_icon="@mipmap/aboutme"
            app:fab_colorNormal="#FFBA50"
            fab:fab_colorPressed="@color/colorAccent"
            fab:fab_size="mini" />
    </com.getbase.floatingactionbutton.FloatingActionsMenu>
</RelativeLayout>